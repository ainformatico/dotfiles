#prevent redefine
if [ ! -n "$MYDOTS" ]
then
  # includes user's private bin if it exists
  if [ -d "$HOME/bin" ]; then
    PATH="$HOME/bin:$PATH"
  fi

  # includes user's private gems
  if [ -d "$HOME/.gems/bin" ]; then
    PATH="$HOME/.gems/bin:$PATH"
  fi

  # vendor configs
  if [ -f ~/.bashrc_vendor ]; then
    . ~/.bashrc_vendor
  fi
  export MYDOTS=yes
fi

#set editor
export EDITOR=vim
